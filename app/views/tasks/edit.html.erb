<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <%= f.submit %>
<% end %>

<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-default"><i class="fas fa-backward"></i> <%= link_to 'back to list', tasks_path %></button>
</div>

