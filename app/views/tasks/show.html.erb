<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>


<div class="btn-group" role="group" aria-label="...">
  <button type="button" class="btn btn-info"><%= link_to 'back to list', tasks_path %></button>
  <button type="button" class="btn btn-default"><%= link_to 'edit this task', edit_path %></button>
  <button type="button" class="btn btn-danger"><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></button>
</div>






